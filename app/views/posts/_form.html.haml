= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  = f.label :title
  = f.text_field :title

  = f.label :content
  = f.text_area :content

  = f.label :category
  = f.text_field :category

  = f.hidden_field :user_id, value: current_user.id
  .actions
    = f.submit 'Save'
